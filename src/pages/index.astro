---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<main>
			<div class="animated" >
				<Header />
				<h1>University of Surrey</h1>
			</div>
			
		</main>
		<Footer />
	</body>
	<!-- always add is:inline for new script imports -->
	<script  is:inline src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
<script is:inline  src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"></script>
<script>
	//ignore this error
VANTA.NET({
  el: ".animated",
  mouseControls: true,
  touchControls: true,
  gyroControls: false,
  minHeight: 200.00,
  minWidth: 200.00,
  scale: 1.00,
  scaleMobile: 1.00,
  color: 0x53039b,
  backgroundColor: 0x0,
  points: 7.00,
  maxDistance: 30.00,
  spacing: 19.00
})
</script>

<style>
	body{
		height: 120vh;
		background: linear-gradient(10deg, #8C05C1, #020918);
	}
	.animated{
		min-height: 960px;
	}
	.animated h1{
		z-index: 999;
		color: beige;
	}
</style>
</html>

