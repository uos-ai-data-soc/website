---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<main>
			<div class="animated" >
				<Header />
				<div class = "MainPage">
					<img src="../../public/AI_Logo.png" alt="AI_Logo" />
					<h2><span class="WhiteText">University of</span> <span class="YellowText">Surrey</span></h2>
					<h1>AI and Data Science Society</h1>
					<h3>From hackathons to guest lectures, we unite AI and data <br>
						science enthusiasts. Network, learn, and have fun.</h3>
					<a href="https://surreyunion.org/activity/clubs-societies/" target="_blank">Get Membership</a>
				</div>
			</div>
			
		</main>
		<Footer />
	</body>
	<!-- always add is:inline for new script imports -->
	<script  is:inline src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
<script is:inline  src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"></script>
<script>
	//ignore this error
VANTA.NET({
  el: ".animated",
  mouseControls: true,
  touchControls: true,
  gyroControls: false,
  minHeight: 200.00,
  minWidth: 200.00,
  scale: 1.00,
  scaleMobile: 1.00,
  color: 0x53039b,
  backgroundColor: 0x0,
  points: 7.00,
  maxDistance: 30.00,
  spacing: 19.00
})
</script>

<style>
	body{
		height: 120vh;
		background: linear-gradient(10deg, #8C05C1, #020918);
	}
	.animated{
		min-height: 960px;
	}
	.animated h1{
		z-index: 999;
		color: beige;
	}
	.MainPage {
		

		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		top: 100px;
		padding: 0px 40px;
		text-align: center;
	}
	.MainPage img{
		
		width: 230px;
		height: 269px;
		margin: 3rem;
	}
	.MainPage h2{
	
		font-size: 2rem;
		font-weight: 700;
	}
	.WhiteText {
		color: rgb(255, 255, 255);
	}
	.YellowText {
		color: #EED101;
	}
	.MainPage h1{
		
		color: white;
		font-size: 4rem;
		font-weight: 700;
		margin: 2rem;
	}
	.MainPage h3{
	
		color: white;
		font-size: 2rem;
	}
	.MainPage a{
		color: rgb(0, 0, 0);
		background-color: white;
		font-size: 2rem;
		font-weight: 600;
		text-decoration: none;

		padding: 15px 40px;
		margin: 3rem;
		border-radius: 10px;
	}
</style>
</html>

