---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---


<header>

	<nav>
		<div class = "Icons">
			<div class = "AIIcon"><img src="../../public/AI_Logo.png" alt="AI_Logo" /></div>
			<div class = "Separator"></div>
			<div class = "SurreyIcon"><img src="../../public/Surrey_Logo.png" alt="Surrey_Logo" /></div>
		</div>

		<ul>
			<li><a href = "https://google.com">Events</a></li>
			<li><a href = "https://google.com">Committee</a></li>
			<li><a href = "https://google.com">Blog</a></li>
			<li><a href = "https://google.com">Resources</a></li>
			<li><a href = "https://google.com">Gallery</a></li>
		</ul>
	</nav>
	
</header>

<style>
	nav {
		height: 77px;
		background-color: rgba(255, 255, 255, 0.15);
		border-bottom: 2px solid #6d42fc;

		display: flex;
		justify-content: center; /* Center horizontally */
		align-items: center; /* Center vertically */
		position: relative;
	}

	 /* Styling for the icon on the left */
	.Icons {
		background-color: rgb(145, 145, 145);
		width: 200px;
		height: 70px;
		position: absolute; /* Position the icon to the left */
		left: 20px; /* Adjust the distance from the left edge */
		gap: 0.75rem; /* Add spacing between items */

		display: flex;
		justify-content: center; /* Center horizontally */
		align-items: center; /* Center vertically */
		flex-wrap: nowrap;
	}

	.AIIcon, .SurreyIcon {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.AIIcon img{
		background-color: white;
		width: 55px;
	}

	.SurreyIcon img{
		background-color: rgb(0, 0, 0);
		width: 120px;
	}

	.Separator{
		background-color: rgb(255, 255, 255);
		width: 2px;
		height: 60px;
		flex-shrink: 0; /* Prevents it from shrinking */
	}

	nav ul{
		background-color: rgb(97, 97, 97);
		list-style: none; /* Remove default bullet points */
		display: flex; /* Display list items inline */
		gap: 3rem; /* Add spacing between items */
	}

	nav a{
		color: white;
		font-size: 20px;
		text-decoration: none;
	}

</style>
